@model CheeseMVC.ViewModels.AddMenuItemViewModel
@{
    ViewBag.Title = "Add Item to Menu: " + Model.Menus.Name;
}


<h2>@ViewBag.Title</h2>

<form asp-controller="Menu" asp-action="AddItem" method="post">

    <div class="form-group">
        <label asp-for="CheeseID">Cheese to add:</label>
        <select asp-for="CheeseID" asp-items="Model.Cheeses"></select>
        <span asp-validation-for="CheeseID"></span>
    </div>

    <input type="hidden" name="MenuID" value="@Model.Menus.ID" />
    <input type="submit" value="Add Menu Item" />

</form>